html,
body {
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: rgba(245, 245, 245, 1);
  height: 100%;
}

.mr20 {
  margin-right: 20rpx;
}

.ml20 {
  margin-left: 20rpx;
}

.main {
  width: 100%;
  margin: 0 auto;
  height: calc(100% - 100rpx);
}

.main-head {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head-title {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #36383c;
  font-weight: bold;
}

.button-class {
  background: rgba(160, 207, 255, 1);
  color: #fff;
}

.button-class:hover,
.button-class.hover {
  background-color: rgba(64, 158, 255, 1);
}

.btn-gray {
  background: rgba(189, 189, 189, 1);
}

.btn-icon {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
  position: relative;
  top: 5rpx;
}

.icon-set {
  width: 24rpx;
  height: 24rpx;
}

.icon-post {
  width: 24rpx;
  height: 24rpx;
}

.main-content {
  box-sizing: border-box;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 0 12rpx 0 rgba(0, 0, 0, 0.1);
  padding: 40rpx 70rpx;
  min-height: 600rpx;
}

.main-content .title {
  font-weight: 700;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}